<div class="container">

  <h1><%= @cocktail.name %></h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td><%= link_to "Delete", dose_path(dose), method: :delete %>
              </td><% end %>
            </tr>
        </tbody>
      </table>
      <%= link_to "Go Back", cocktails_path %>

      <%= link_to "Add", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>

</div>
